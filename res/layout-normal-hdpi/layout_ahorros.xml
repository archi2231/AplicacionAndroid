<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewAhorros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" xmlns:app="http://schemas.android.com/apk/res/com.planetmedia.infonavit">
    
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appbody"
        android:orientation="vertical" >

     <TextView
         android:id="@+id/txt_nombre_ahorro"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="0dp"
         android:layout_marginLeft="11dp"
         android:layout_marginRight="11dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/login_1"
         android:ems="10"
         android:textColor="#000000"
         android:textSize="18sp"
         android:textStyle="bold" />
		
        <TextView
            android:id="@+id/txt_credito_ahorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/login_3"
            android:ems="10"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
     
        <TextView
            android:id="@+id/txt_mensaje_ahorro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/generico_txt_over_101"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

     </LinearLayout>
</ScrollView>