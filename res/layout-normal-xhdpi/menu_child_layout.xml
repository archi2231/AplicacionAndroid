<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/standar_seis2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_item_child_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ImageExpanderSet"
        android:gravity="center_vertical"
        android:text="Texto descriptivo" />

	<ImageView
	    android:id="@+id/ImageExpanderSet"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_centerVertical="true"
	    android:layout_margin="10dp"
	    android:src="@drawable/arrow_clic" />
	
</RelativeLayout>