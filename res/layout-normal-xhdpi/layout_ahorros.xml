<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewAhorros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" xmlns:app="http://schemas.android.com/apk/res/com.planetmedia.infonavit">
    
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appbody"
        android:orientation="vertical" >

     <TextView
         android:id="@+id/txt_nombre_ahorro"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="0dp"
         android:layout_marginLeft="11dp"
         android:layout_marginRight="11dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/login_1"
         android:ems="10"
         android:textSize="15sp"
         android:textColor="#000000"
         android:paddingLeft="3dp"
		 android:paddingRight="3dp"
		 android:paddingTop="3dp"
		 android:paddingBottom="3dp"
         android:textStyle="bold"
         android:gravity="center_vertical|center_horizontal" />
		
        <TextView
            android:id="@+id/txt_credito_ahorro"
		   	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
		    android:layout_gravity="center"
		    android:ems="10"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:textSize="15sp"
		    android:background="@drawable/login_3"
		    android:textColor="#000000"
		    android:textStyle="bold" 
		    android:gravity="center_vertical|center_horizontal" />
     
        
        <TextView
		    android:id="@+id/txt_mensaje_ahorro"
		   	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
		    android:layout_gravity="center"
		    android:layout_marginBottom="2dp"
		    android:layout_marginTop="10dp"
		    android:paddingLeft="3dp"
		    android:paddingRight="3dp"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:ems="10"
		    android:background="@drawable/login_1"
		    android:textColor="#000000"
		    android:textStyle="bold"
		    android:gravity="center_vertical|center_horizontal"
		    
		    android:textSize="15sp" />

     </LinearLayout>
</ScrollView>