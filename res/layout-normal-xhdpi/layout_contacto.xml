<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbody" >    
   
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="11dp"
       android:layout_marginRight="11dp"
       android:layout_marginTop="11dp" 
       android:layout_marginBottom="11dp"
       android:orientation="vertical">
    
       		<RelativeLayout
       		    android:layout_width="match_parent"
       		    android:layout_height="match_parent"
       		    android:background="@color/appbody" >

    			<ImageView
    			    android:id="@+id/titulo_contacto"
    			    android:layout_width="match_parent"
    			    android:layout_height="wrap_content"
    			    android:background="@drawable/btn_op_pago_desgloce"
    			    android:text="Opciones de pago" />

				<TextView
				    android:id="@+id/txt_contacto"
				    style="@attr/ttf_name"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentRight="true"
				    android:layout_alignParentTop="true"
				    android:layout_marginBottom="3dp"
				    android:layout_marginTop="20dp"
				    android:gravity="center"
				    android:shadowColor="#2a0606"
				    android:shadowDx="1"
				    android:shadowDy="1"
				    android:shadowRadius="1.5"
				    android:text="Contacto"
				    android:textAppearance="?android:attr/textAppearanceLarge"
				    android:textColor="#ffffff"
				    android:textStyle="bold" />

				</RelativeLayout>
    			
    			<TextView
            		android:id="@+id/txt_contacto_nombre"
		            android:layout_width="match_parent"
        		    android:layout_height="60dp"
        		    android:background="@drawable/login_2"
		            />
				<TextView
            		android:id="@+id/txt_contacto_credito"
		            android:layout_width="match_parent"
        		    android:layout_height="60dp"
        		    android:background="@drawable/login_3"
		            /> 
		            
				<EditText
            		android:id="@+id/txt_contacto_celular"
		            android:layout_width="match_parent"
		            android:layout_marginTop="10dp"
        		    android:layout_height="60dp"
        		    android:background="@drawable/login_1"
        		    android:ems="10"
            		android:hint="Celular"
		            />
				
				<EditText
            		android:id="@+id/txt_contacto_correo"
		            android:layout_width="match_parent"
        		    android:layout_height="60dp"
        		    android:background="@drawable/login_3"
		            android:ems="10"
            		android:hint="Correo"/>
				
				<Button
				    android:id="@+id/btn_contacto_guardar"
				    android:layout_width="match_parent"
				    android:layout_height="50dp"
				    android:layout_marginTop="11dp"
				    android:background="@drawable/btn_op_pago"
				    android:shadowColor="#2a0606"
				    android:shadowDx="1"
				    android:shadowDy="1"
				    android:shadowRadius="1.5"
				    android:text="Guardar"
				    android:textColor="#ffffff"
				    android:textSize="20sp"
				    android:textStyle="bold" />
							
	</LinearLayout>
	
   

</ScrollView>